<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#e6ffffff"
            android:id="@+id/textviewplaynhacindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="1"
            android:textSize="17sp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:id="@+id/textviewplaynhactenbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textviewplaynhacindex"
            android:text="Toi la ai"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:id="@+id/textviewplaytencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewplaynhactenbaihat"
            android:layout_toRightOf="@id/textviewplaynhacindex"
            android:text="Quach thanh danh"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>
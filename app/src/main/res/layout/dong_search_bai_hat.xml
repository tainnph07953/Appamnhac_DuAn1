<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_margin="3dp"
        android:scaleType="fitXY"
        android:id="@+id/imageviewsearch"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:ellipsize="end"
        android:singleLine="true"
        android:maxWidth="250dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:id="@+id/textviewsearchtenbaihat"
        android:layout_toRightOf="@id/imageviewsearch"
        android:text="Ten bai hat"
        android:textColor="#363636"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:maxWidth="250dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/textviewsearchtenbaihat"
        android:id="@+id/textviewsearchcasibaihat"
        android:layout_toRightOf="@id/imageviewsearch"
        android:text="Ca si"
        android:textColor="#8c8a8a"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>